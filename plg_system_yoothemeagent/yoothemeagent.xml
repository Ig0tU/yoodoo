<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
    <name>plg_system_yoothemeagent</name>
    <author>Sov0rc</author>
    <creationDate>March 2024</creationDate>
    <copyright>Copyright (C) 2024 Sov0rc. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>admin@example.com</authorEmail>
    <authorUrl>www.example.com</authorUrl>
    <version>1.0.0</version>
    <description>YOOtheme Builder Agent - AI-powered development assistant for YOOtheme Pro.</description>
    <files>
        <filename plugin="yoothemeagent">yoothemeagent.php</filename>
        <folder>assets</folder>
        <folder>language</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="ai_provider" type="list" default="ollama" label="Default AI Provider">
                    <option value="ollama">Ollama (Local)</option>
                    <option value="lmstudio">LM Studio (Local)</option>
                    <option value="openrouter">OpenRouter</option>
                    <option value="grok">Grok</option>
                    <option value="ollama_cloud">Ollama Cloud</option>
                </field>
                <field name="openrouter_key" type="password" label="OpenRouter API Key" />
                <field name="grok_key" type="password" label="Grok API Key" />
                <field name="ollama_cloud_url" type="text" default="https://api.ollama.com" label="Ollama Cloud URL" />
                <field name="ollama_cloud_key" type="password" label="Ollama Cloud API Key" />
            </fieldset>
        </fields>
    </config>
</extension>
